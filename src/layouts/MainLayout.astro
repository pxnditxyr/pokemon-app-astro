---

interface Props {
  title: string
}

const { title } = Astro.props

---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    <title> { title } </title>
	</head>
	<body>
    <main class="w-full min-h-screen bg-gray-800 p-4 flex flex-col gap-4 text-white">
      <slot />
    </main>
	</body>
</html>
